<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/U"
    >

    <View android:layout_height="180dp"
        android:layout_width="422dp"
        android:background="@drawable/circuit"
        android:id="@+id/view"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="126dp"
        android:layout_height="116dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="24dp"
        android:layout_marginTop="112dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp" />
    <TextView
        android:text="Your Appliances have been added!"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="368dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.69"
        />

    <TextView
        android:text="Welcome Himanshu"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:gravity="right|fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/profile_image"
        android:layout_marginBottom="24dp"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view" />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>