<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animate_graph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mayanktripathi.smartgrid.AnimateGraph">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Bill : â‚¹1800 "
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"/>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chart2"
        android:layout_weight="1"></com.github.mikephil.charting.charts.LineChart>

</LinearLayout>
